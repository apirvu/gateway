# connect http://localhost:8080/index.html
#       option transport tcp://localhost:8081
# connected

read method "GET"
read header "Host" "localhost:8080"
closed

write status "200" "OK"
write version "HTTP/1.1"
write header content-length
write header "Content-Type" "text/html"
write "<html><body>Hello World!</body></html>"
read notify FIRST_REQUEST_COMPLETE
close


connect http://localhost:8080/index.html
       option transport tcp://localhost:8082
connected

write notify CONNECT_TO_SECOND_GATEWAY

read method "GET"
read header "Host" "localhost:8080"

write status "200" "OK"
write version "HTTP/1.1"
write header content-length
write header "Content-Type" "text/html"
write "<html><body>Hello World!</body></html>"
close